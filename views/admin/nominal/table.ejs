<table id="example2" class="table table-borderless table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Koin</th>
      <th>Jumlah Koin</th>
      <th>Harga</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% nominal.forEach((e, i) => { i++ %>
    <tr>
      <td><%= i %></td>
      <td><%= e.coinName %></td>
      <td><%= e.coinQuantity %></td>
      <td><%= e.price %></td>
      <td>
        <form action="/nominal/delete/<%= nominal._id %>?_method=DELETE" method="post">
          <a href="/nominal/edit/<%= nominal._id %>" class="btn btn-warning">
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>

  </tbody>
</table>